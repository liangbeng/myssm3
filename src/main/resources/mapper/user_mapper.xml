<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liang.dao.UserDao">
    <resultMap id="userResultMap" type="com.liang.pojo.User">
        <id property="id" column="id"/>
        <result property="userName" column="user_name"/>
        <result property="password" column="password"/>
        <result property="nickName" column="nick_name"/>
        <result property="email" column="email"/>
        <result property="avatar" column="avatar"/>
        <result property="createDate" column="create_date"/>
        <result property="status" column="status"/>
    </resultMap>

    <sql id="userColumn">
        user_name,
        password,
        nick_name,
        email,
        avatar,
        create_date,
        status
    </sql>

    <sql id="userProperty">
        #{userName},
        #{password},
        #{nickName},
        #{email},
        #{avatar},
        #{createDate},
        #{status}
    </sql>

    <select id="findUserById" resultMap="userResultMap" parameterType="Integer">
        select * from tb_user
        where id=#{id}
    </select>

    <resultMap id="userResult" type="com.liang.pojo.User">
        <result></result>

    </resultMap>
    
    <insert id="insertUser" parameterType="com.liang.pojo.User">
        insert tb_user (
        <include refid="userColumn"/>
        )
        values (
        <include refid="userProperty"/>
        )
    </insert>
</mapper>